<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/r_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test2Page">

    <include layout="@layout/my_toolbar" />

    <ProgressBar
        android:id="@+id/TranslateProgressspinner"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp" />

    <EditText
        android:id="@+id/etInput"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="164dp"
        android:ems="10"
        android:hint="Enter a word"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnTranslate"
        android:layout_width="86dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/etInput"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:text="Translate!"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/c_layout"
        android:layout_width="315dp"
        android:layout_height="207dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="132dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvTest2fr"
            android:layout_width="177dp"
            android:layout_height="47dp"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="66dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="66dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="39dp"
            android:hint="French translation"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/tvTest2sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTest2sp"
            android:layout_width="174dp"
            android:layout_height="53dp"
            android:layout_marginBottom="33dp"
            android:layout_marginEnd="68dp"
            android:layout_marginLeft="69dp"
            android:layout_marginRight="68dp"
            android:layout_marginStart="69dp"
            android:layout_marginTop="24dp"
            android:hint="Spanish translation"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTest2fr" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:text="Save" />

</RelativeLayout>