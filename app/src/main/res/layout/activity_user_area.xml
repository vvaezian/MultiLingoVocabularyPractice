<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userAreaLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vvaezian.multilingovocabularypractice.UserArea">

    <include layout="@layout/my_toolbar" />

    <TextView
        android:id="@+id/tvGreet"
        android:layout_width="120dp"
        android:layout_height="29dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="131dp"
        android:text="Greetings" />


    <Button
        android:id="@+id/btnGoEditPage"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="204dp"
        android:onClick="BtnEditClicked"
        android:text="Add Words"
        android:textAllCaps="false"
        android:textSize="12sp" />

    <Button
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="246dp"
        android:onClick="BtnTestClicked"
        android:text="Go to Test"
        android:textAllCaps="false"
        android:textSize="12sp" />

    <Button
        android:id="@+id/test2"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="241dp"
        android:onClick="BtnTest2Clicked"
        android:text="Go to Test2"
        android:textAllCaps="false"
        android:textSize="12sp" />

</RelativeLayout>
