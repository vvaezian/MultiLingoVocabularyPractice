<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/userAreaLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vvaezian.multilingovocabularypractice.UserArea">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvGreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnGoEditPage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="Greetings" />

        <Button
            android:id="@+id/btnGoEditPage"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_toLeftOf="@+id/BtnLogOut"
            android:layout_toStartOf="@+id/BtnLogOut"
            android:onClick="BtnEditClicked"
            android:text="Add Words"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:id="@+id/BtnLogOut"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:onClick="BtnLogOutClicked"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="go to test"
            android:onClick="BtnTestClicked"/>
    </LinearLayout>

</RelativeLayout>
