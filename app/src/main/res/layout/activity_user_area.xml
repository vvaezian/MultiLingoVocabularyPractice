<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userAreaLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    tools:context="com.example.vvaezian.multilingovocabularypractice.UserArea">

    <TextView
        android:id="@+id/tvGreet"
        android:layout_width="120dp"
        android:layout_height="29dp"

        android:layout_alignBottom="@+id/btnGoEditPage"
        android:layout_marginBottom="0dp"
        android:layout_toLeftOf="@+id/test"
        android:layout_toStartOf="@+id/test"
        android:text="Greetings" />


    <Button
        android:id="@+id/btnGoEditPage"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_toLeftOf="@+id/BtnLogOut"
        android:layout_toStartOf="@+id/BtnLogOut"
        android:onClick="BtnEditClicked"
        android:text="Add Words"
        android:textAllCaps="false"
        android:textSize="12sp" />

    <Button
        android:id="@+id/BtnLogOut"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="BtnLogOutClicked"
        android:text="Log Out"
        android:textAllCaps="false"
        android:textSize="12sp" />

    <Button
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnGoEditPage"
        android:onClick="BtnTestClicked"
        android:text="Go to Test"
        android:textAllCaps="false"
        android:textSize="12sp" />

</RelativeLayout>
